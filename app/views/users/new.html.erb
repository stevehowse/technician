<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :forename %>
      <%= f.text_field :forename, :class=>"input-large"%>

      <%= f.label 'Surname' %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
<table>
<tr>
<td>
      <%= f.label :teacher %>
      <%= f.check_box :teacher %>
</td>
<td>
      <%= f.label :technician %>
      <%= f.check_box :technician %>
</td>
</tr>
</table>	  
	  <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>